{
    "Verbosity": {
        "level": 2
    },
    "Dataset": {
        "name": "MaterialsProject",
        "path": {"train": "./serialized_dataset/MaterialsProject_train.pkl", "validate": "./serialized_dataset/MaterialsProject_validate.pkl", "test": "./serialized_dataset/MaterialsProject_test.pkl"},
        "format": "CIF",
        "compositional_stratified_splitting": false,
	    "rotational_invariance": true,
        "node_features": {
            "name": ["num_of_protons"],
            "dim": [1],
            "column_index": [0]
        },
        "graph_features":{
            "name": ["formation_energy"],
            "dim": [1],
            "column_index": [0]
        }
    },
    "NeuralNetwork": {
        "Architecture": {
            "model_type": "PNA",
            "radius": 3,
            "max_neighbours": 100000,
	        "periodic_boundary_conditions": false,
            "hidden_dim": 64,
            "num_conv_layers": 10,
            "output_heads": {
                "graph":{
                    "num_sharedlayers": 2,
                    "dim_sharedlayers": 5,
                    "num_headlayers": 2,
                    "dim_headlayers": [64,64]
                },
                "node": {
                    "num_headlayers": 2,
                    "dim_headlayers": [64,64],
                    "type": "mlp"
                }
            },
            "task_weights": [1.0]
        },
        "Variables_of_interest": {
            "input_node_features": [0],
            "output_names": ["formation_energy"],
            "output_index": [0],
            "type": ["graph"],
            "denormalize_output": true
        },
        "Training": {
            "num_epoch": 500,
            "perc_train": 0.7,
	    "loss_function_type": "mse",
            "learning_rate": 1e-3,
            "batch_size": 64,
            "continue": 0
        }
    },
    "Visualization": {
        "plot_init_solution": true,
        "plot_hist_solution": false,
        "create_plots": true
    }
}
